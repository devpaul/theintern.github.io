@import 'nib/reset';
@import 'nib/vendor';
@import 'fonts/pixeden-7';

/*
 * vertical rhythm: 32px (~1.77rem)
 * minimum width: 320px
 * maximum width: 960px (~53.333rem)
 * breakpoints: 320 590 680 768 960
 */

global-reset();
reset-html5();

$lh = 32px;

