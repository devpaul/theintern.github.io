// https://kuler.adobe.com/create/color-wheel/?base=2&rule=Analogous&selected=0&name=My%20Kuler%20Theme&mode=rgb&rgbvalues=0.5700000000000001,0.14842525374844207,0.2266921015420891,0.39164249078998703,0.17830818247439467,0.6100000000000001,0.17800041784702492,0.3284225019355361,0.52,0.21321588424869686,0.7294117647058823,0.5314967736334374,0.3569173346169923,0.5700000000000001,0.17892001053150905&swatchOrder=0,1,2,3,4

$backgroundColor = #FFF;
$color = #000;
$internTeal = #318565;
$internTealInvert = #FFF;
$internBlue = #315F9C;
$internBlueInvert = #FFF;
$internGreen = #73BA3B;
$internGreenInvert = #FFF;
$internRed = #91263A;
$internRedInvert = #FFF;
$internGrey = #F0F0F0;
$internLightGrey = #F5F5F5;
$primaryFont = aktiv-grotesk-std, sans-serif;
$secondaryFont = jubilat, serif;

html,
body {
	background-color: $backgroundColor;
	color: $color;
	font: 300 18px/$lh $primaryFont;
	text-rendering: optimizeLegibility;
}

html {
	// Browsers other than Firefox have bad vw size calculation and include the scrollbars
	overflow-x: hidden;

	// Forces browser to correctly calculate size of vw on platforms with scrollbars
	overflow-y: scroll;
}

a {
	border-bottom: 1px solid $internTeal;
	color: $internTeal;
	display: inline-block;
	line-height: 0.9em;
	transition: color 0.2s, border-bottom-color 0.2s;
	text-decoration: none;
	text-shadow: $backgroundColor 1px 0, $backgroundColor -1px 0;

	&:hover {
		color: $color;
		border-bottom-color: transparent;
		text-decoration: none; // for instances where text-decoration still must be used
	}

	&:focus {
		outline: 1px dotted;
	}
}

.content {
	margin: 0 auto;
	max-width: 640px;
	padding: 0 60px;
}

.menuButton {
	cursor: pointer;
	display: inline-block;
	font-size: 0;
	left: 0.2rem;
	line-height: 26px;
	position: fixed;
	top: 0.1rem;
	transition: transform 0.2s ease-in-out;
	z-index: 4;

	&:before {
		@extend .icon;
		@extend .icon-menu:before;

		font-size: 26px;
	}

	&[aria-expanded='true'] {
		transform: translate(16px /* aktiv-grotesk-std 1em */, 0);
	}
}

.mainMenu {
	background-color: $backgroundColor;
	bottom: 0;
	box-shadow: 0 3px 3px rgba(#000, 0.25);
	font: 300 16px/$lh 'aktiv-grotesk-std', serif;
	left: 0;
	line-height: $lh;
	opacity: 0;
	padding: calc(0.5rem + 26px) 2rem 0 0.2rem;
	position: fixed;
	top: 0;
	transition: visibility 0s linear 0.2s, opacity 0.2s linear;
	visibility: hidden;
	z-index: 3;

	a {
		border-bottom-color: $color;
		color: $color;
		line-height: 1em;
		margin-left: 1.2em;

		&:before {
			background-color: $backgroundColor;
			padding-bottom: 0.1em;
			margin-bottom: -0.1em;
		}

		&:hover {
			border-bottom-color: transparent;
		}

		&.icon-sitepen-labs {
			margin-left: 0;
			margin-top: $lh;

			&:before {
				padding-right: 0.2em;
			}
		}
	}

	&.open {
		opacity: 1;
		transition-delay: 0s;
		visibility: visible;
	}
}

.title {
	font-family: $secondaryFont;
	font-size: 16px * 4;
	font-weight: 400;
	line-height: 16px * 4;
	margin: $lh * 4 0;
	white-space: nowrap;

	.logo {
		border-bottom: none;
		color: $color;
		text-shadow: none;
		transition: none;

		&:before {
			background: url('images/logo.png') no-repeat 0 0 / contain;
			content: '';
			display: inline-block;
			height: 90px;
			padding-right: 20px;
			margin-left: -@height -@padding-right;
			width: @height;
		}
	}

	.subtitle {
		display: block;
		font-size: 16px * 2;
		font-weight: 200;
		line-height: 16px * 1;
	}
}

main {
	> * {
		margin-bottom: $lh * 6;
	}

	p,
	ul,
	ol,
	table {
		margin-bottom: $lh * 2;
	}

	ul > li {
		text-indent: -0.5em;

		* {
			text-indent: 0;
		}

		&:before {
			@extend .icon;
			@extend .icon-arrow-right:before;

			color: $internTeal;
			width: 0.5em;
		}

		&[class*='icon-'] {
			text-indent: -1em;

			&:before {
				width: 1em;
			}
		}
	}

	.checks > li {
		text-indent: -1em;

		&:before {
			@extend .icon-success:before;
			font-size: 1.1rem;
			width: 1rem;
		}
	}

	h2 {
		font-family: $secondaryFont;
		font-weight: 400;
		font-size: 24px;
		margin-bottom: $lh;
	}

	table {
		width: 100%;
	}

	td {
		font-weight: 200;
	}

	sup {
		font-size: 0.75rem;
		padding-left: 0.2em;
		vertical-align: text-top;
	}

	code {
		font-family: 'prestige-elite-std', monospace;
		font-size: 110%;
		font-weight: bold;
		letter-spacing: -1px;
	}
}

.get {
	text-align: center;

	.action {
		border: 3px solid $internBlue;
		color: $internBlue;
		display: inline-block;
		font-family: $secondaryFont;
		font-size: 2rem;
		font-weight: 400;
		margin-bottom: $lh * 0.25;
		padding: 1rem 2rem;
		text-shadow: none;
		transition: border-color 0.25s, color 0.25s;

		&:hover {
			border-color: $color;
			color: $color;
		}
	}
}

.read {
	display: block;
}

.users {
	background: url('images/users.png') no-repeat 0 0 / contain;
	height: 31px;
	margin-top: $lh * -0.5;
	text-indent: -32767em;
}

.libraries {
	margin-bottom: 'calc(%s - 1.5rem)' % ($lh * 2);
	text-align: center;
	text-rendering: auto; // Chrome

	> li {
		display: inline-block;
		padding: 0 1.5rem 1.5rem;

		&:first-child {
			padding-left: 0;
		}

		&:last-child {
			padding-right: 0;
		}

		&:before {
			display: none;
		}

		a {
			border-bottom: none;
			font-size: 0;

			&:before {
				@extend .icon;
				font-size: 4rem;
				width: auto;
			}
		}

		// The icon font is a little messed up
		.icon-ember:before {
			vertical-align: 8px;
		}
	}
}

.comparison {
	margin-bottom: $lh * 0.75;

	table,
	thead,
	tbody,
	.header {
		display: block;
		width: auto;
	}

	table {
		margin-bottom: 0;
	}

	thead {
		background-color: $internLightGrey;
		display: block;
		font-family: $secondaryFont;
		font-size: 1.1rem;
		margin: 0 calc(-50vw + 17.8rem);
		padding: 0 calc(50vw - 17.8rem);
		position: -webkit-sticky;
		position: sticky;
		top: 0;
		z-index: 2;

		tr {
			max-width: 640px;
		}

		th {
			overflow: hidden;
			text-align: center;
			text-overflow: ellipsis;

			a {
				border-bottom: none;
				display: inline;
				text-shadow: none;
				text-decoration: underline;
			}
		}
	}

	tr {
		border-collapse: collapse;
		display: table;
		table-layout: fixed;
		width: calc(100% - 1px);
	}

	td {
		hyphens: manual;
		padding: 0.2rem;
		text-align: center;
		vertical-align: middle;
	}

	.header {
		background-color: $backgroundColor;
		padding-top: $lh * 0.5;
		position: -webkit-sticky;
		position: sticky;
		top: $lh - @padding-top;
		z-index: 1;

		th {
			display: block;
			font-weight: 200;
		}
	}

	.yes,
	.no,
	.maybe {
		height: 1.5rem; // two times line-height for .maybe text
		text-rendering: auto; // Chrome

		a {
			text-shadow: none;
		}
	}

	.yes,
	.no {
		font-size: 0;
		line-height: 0;

		&:before {
			@extend .icon;
			font-size: 1.1rem;
		}

		sup {
			vertical-align: 0.4rem;
		}
	}

	.yes {
		background-color: $internGreen;
		color: $internGreenInvert;

		&:before {
			@extend .icon-success:before;
		}

		a {
			border-bottom-color: $internGreenInvert;
			color: $internGreenInvert;
		}
	}

	.no {
		border: none;
		color: $internRed;

		&:before {
			@extend .icon-failure:before;
		}

		a {
			border-bottom-color: $internRed;
			color: $internRed;

			&:hover {
				border-bottom-color: transparent;
			}
		}
	}

	.maybe {
		background-color: $internGrey;
		border-color: darken($internGrey, 10%);
		font-size: 0.75rem;
		font-weight: 400;
		line-height: 1;
	}

	.intern:before {
		background: url('images/logo.png') no-repeat 0 0 / contain;
		content: '';
		display: inline-block;
		height: 1rem;
		padding-right: 0.2rem;
		width: @height;
	}
}

.comparisonRefs {
	margin-bottom: $lh * 2;

	p {
		font-size: 0.75rem;
		line-height: $lh * 0.75;
		margin-bottom: $lh * 0.5;
	}
}

footer {
	margin-bottom: $lh * 2;

	.content {
		position: relative;
	}

	.selfTests {
		bottom: -2px; // aligning text baseline
		font-size: 0.7rem;
		position: absolute;
		right: 60px;
		text-align: right;
	}
}

@media (max-width: 959px) {
	.title {
		margin-left: 80px;
	}
}

@media (max-width: 767px) {
	.content {
		padding: 0 1rem;
	}

	.title {
		margin-left: 110px;
	}

	main {
		ul {
			margin-left: 1rem;
		}
	}

	.get {
		margin-left: 0;

		.action {
			line-height: 1;
			padding-left: 1rem;
			padding-right: @padding-left;
		}
	}

	.comparison {
		.intern {
			font-size: 0;

			&:before {
				vertical-align: -0.3rem;
			}
		}

		.maybe:not([colspan]) {
			font-size: 0;
			line-height: 0;

			// Cannot use @extend because this rule is inside a media query but the .icon rule is not,
			// so it would end up applying outside the media rule
			&:before {
				{$icon}
				content: '\e804';
				font-size: 1.2rem;
			}

			sup {
				vertical-align: 0.4rem;
			}
		}
	}

	footer {
		.copyright {
			margin-bottom: $lh;
		}
		.selfTests {
			position: static;
			text-align: left;

			&:before {
				margin-left: 0;
				margin-right: auto;
			}
		}
	}
}

@media (max-width: 679px) {
	.libraries {
		margin-left: auto;
		margin-right: @margin-left;
		max-width: 20rem;
	}

	.comparison thead {
		margin-left: -1rem;
		margin-right: @margin-left;
		padding-left: -@margin-left;
		padding-right: -@margin-right;
		width: auto;
	}
}

@media (max-width: 589px) {
	.title {
		margin-left: 0;
		white-space: normal;

		.logo:before {
			display: block;
			margin-left: 0;
		}

		.subtitle {
			line-height: 0.75;
			margin-top: -0.15em;
		}
	}
}
